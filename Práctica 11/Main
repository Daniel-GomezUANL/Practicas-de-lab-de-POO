
package Practica11;
import static Practica11.Funciones.convertirANumerosRomanos;
import java.io.InputStream;
import java.util.Random;
import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Funciones F = new Funciones();
        Scanner entrada = new Scanner (System.in);
        int opcion;
        boolean op = true;
        while(op){
                System.out.println("\nMenu");
                System.out.println("1. Funcion convertir int to string ");
                System.out.println("2. Función suma n números ");
                System.out.println("3. Generar X numeros random y contar cuantos números termina por el numero x ");
                System.out.println("4. Programa Java que muestre los números del 1 al 100 utilizando la instrucción while ");
                System.out.println("5. Programa Java que muestre los números del 1 al 100 utilizando la instrucción do..while ");
                System.out.println("6. Programa Java que muestre los números del 1 al 100 utilizando la instrucción for ");
                System.out.println("7. Convertir a números romanos – Diccionario de datos ");
                System.out.print("Seleccione opcion: ");
                opcion = entrada.nextInt();
                if (opcion == 8){
                    System.out.println("Finalizo la practica");
                    break;
                } else{
                    switch(opcion){
                        case 1:
                        Scanner entrada1 = new Scanner (System.in);
                        int p1;
                        System.out.print("Digite un numero: ");
                        p1 = entrada1.nextInt();
                        System.out.println("El numero: "+p1);
                        System.out.println("Se conviertio a una Cadena de caracteres: "+String.valueOf(p1));
                            break;
                        
                        case 2:
                        int sum, scum=0, num;
                        Scanner tem = new Scanner (System.in);
                        System.out.println("Ingrese la cantidad de numeros que va a ingresar: ");
                        sum = tem.nextInt();
                        System.out.println("Ingrese los numeros");
                        for (int i = 0; i < sum; i++){
                        num = tem.nextInt();
                        scum = num+scum;
                        }
                        System.out.println("Elresultado es: "+scum);
                            break;
                        
                        case 3:
                        Random dado = new Random();
                        int numero;
                        for (int i=0; i<30;i++){
                        numero = (dado.nextInt(30-20+1)+20);
                        System.out.println(numero);
                        }
                            break;
                        
                        case 4:
                        System.out.println("Numeros del 1 al 100 con while: ");                                                            
                        int i=1;
                        while(i<=100) {
                        System.out.println(i);                                                                         
                        i++;
                        }
                            break;
                        
                        case 5:
                        int e = 1;
                        System.out.println("Numeros del 1 al 100 con do.while: ");                                                             
                        do{
                        System.out.println(e);
                        e++;
                        }while(e<=100);
                            break;
                        case 6:
                        System.out.println("Numeros del 1 al 100 con for: ");                                                             
                        for(int m = 1; m<=100;m++)
                        System.out.println(m);
                            break;
                        
                        case 7:
                        Scanner sc = new Scanner(System.in);
                        int N;
                        do {
                        System.out.print("Introduce un número entre 1 y 3999: ");
                        N = sc.nextInt();
                        } while (N < 1 || N > 3999);
                        System.out.println(N + " en numeros romanos -> " + convertirANumerosRomanos(N));   
                            break;
                        
                        default:
                            System.out.println("*********Opcion no valida*********");                   
                }
               }
        }
    }
    }
